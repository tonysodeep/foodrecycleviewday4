<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_amfood_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_amfood_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="food title"
        android:textColor="#484545"

        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/tv_amfood_description"
        app:layout_constraintLeft_toRightOf="@id/iv_amfood_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amfood_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:maxLines="2"
        android:text="food title dhrufhoeurufovj\neirfuthgkfkeoir\niejfirutjgfnd"
        android:textColor="#B3ACAC"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_amfood_image"
        app:layout_constraintTop_toBottomOf="@id/tv_amfood_name"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>